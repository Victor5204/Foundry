<Window x:Class="Foundry.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Литейный цех" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Авторизация" Click="BtnLogin_Click" Margin="0,0,10,0"/>
            <Button Content="Продукция" Click="BtnProducts_Click" Margin="0,0,10,0"/>
            <Button Content="Заказы" Click="BtnOrders_Click" Margin="0,0,10,0"/>
        </StackPanel>
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>